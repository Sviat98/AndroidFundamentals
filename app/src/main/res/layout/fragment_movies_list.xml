<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical"
    tools:context=".FragmentMoviesList">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/movies_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="@dimen/extra_big_margin"
            android:layout_marginBottom="@dimen/default_margin_start"
            android:drawableStart="@drawable/ic_movies_list_icon"
            android:drawablePadding="@dimen/medium_margin"
            android:text="@string/movies_list_title"
            android:textColor="@color/white"
            android:textSize="@dimen/movies_list_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/guideline_movie_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constrainedHeight="true"
           android:id="@+id/movies_recycler_view"
           android:layout_marginTop="@dimen/default_margin_start"
           app:layout_constraintTop_toTopOf="@id/guideline_movie_card"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:orientation="vertical"
           android:scrollbars="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_movie_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.23" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>